		<Button x:Name="btn_szor" Content="*" HorizontalAlignment="Left" Margin="96,46,0,0" VerticalAlignment="Top" Width="20" Height="21" Click="btn_szor_Click"/>
		<Button x:Name="btn_oszt" Content="/" HorizontalAlignment="Left" Margin="135,46,0,0" VerticalAlignment="Top" Width="20" Height="20" RenderTransformOrigin="0.4,0.152" Click="btn_oszt_Click"/>
		<Button x:Name="btn_maradek" Content="%" HorizontalAlignment="Left" Margin="171,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.217,0.403" Width="20" Height="21" Click="btn_maradek_Click"/>
		<Label x:Name="lb_eredmeny" Content="" HorizontalAlignment="Left" Margin="103,70,0,0" VerticalAlignment="Top"/>

	</Grid>
</Window>
